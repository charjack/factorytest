<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="#151104" />
            <corners android:radius="0dp" />

        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="1dp">
        <shape>
            <gradient android:angle="90" android:centerColor="#ff0000"
                android:centerX="0.5" android:centerY="0.5" android:endColor="#ff0000"
                android:startColor="#ff0000" android:type="linear" />

            <padding android:bottom="0dp" android:left="0dp" android:right="0dp"
                android:top="0dp" />
            <!-- 应该是圆角 -->
            <corners android:radius="0dp" />
        </shape>
    </item>
</layer-list>

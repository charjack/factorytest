<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.charjack.factorytest.ThirdOpt.RecordPlayActivity">
    <Button
        android:id="@+id/button_record_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始录音"
        android:textSize="20sp"
        android:visibility="visible"/>
    <Button
        android:id="@+id/button_record_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/button_record_start"
        android:text="停止录音"
        android:textSize="20sp"
        android:visibility="invisible" />
    <Button
        android:id="@+id/button_play_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/button_record_stop"
        android:text="开始播放"
        android:textSize="20sp"
        android:visibility="invisible" />
    <Button
        android:id="@+id/button_play_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/button_play_start"
        android:text="停止播放"
        android:textSize="20sp"
        android:visibility="invisible" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_record_start"
        android:text="注意:如果能录音并播放，说明麦克和喇叭一切正常"
        android:textColor="#0f0"
        android:textSize="20sp"/>
    <LinearLayout
        android:id="@+id/lcd_button_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom">
        <Button
            android:id="@+id/button_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/buttonstyle"
            android:padding="5dp"
            android:text="正确"
            android:textSize="20sp"/>
        />
        <Button
            android:id="@+id/button_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/buttonstyle"
            android:padding="5dp"
            android:text="错误"
            android:textSize="20sp"/>
        />
    </LinearLayout>
</RelativeLayout>

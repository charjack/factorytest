<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.charjack.factorytest.ThirdOpt.VersonActivity">

    <TextView android:id="@+id/versonid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="版本号:"
        android:textSize="20sp"/>
    <TextView android:id="@+id/versonid_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/versonid"
        android:text="value"
        android:textSize="20sp"
        />
    <TextView android:id="@+id/creattime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/versonid_value"
        android:text="生成时间:"
        android:textSize="20sp"/>
    <TextView android:id="@+id/creattime_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/creattime"
        android:text="value"
        android:textSize="20sp"/>

    <LinearLayout
        android:id="@+id/lcd_button_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom">
        <Button
            android:id="@+id/button_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/buttonstyle"
            android:padding="5dp"
            android:text="正确"
            android:textSize="20sp"/>
        />
        <Button
            android:id="@+id/button_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/buttonstyle"
            android:padding="5dp"
            android:text="错误"
            android:textSize="20sp"/>
        />

    </LinearLayout>
</RelativeLayout>
